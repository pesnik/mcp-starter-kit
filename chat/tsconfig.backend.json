{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist/backend",
    "rootDir": "./src/backend",
    "declaration": false,
    "composite": false,
    "noEmit": false
  },
  "include": ["src/backend/**/*"],
  "exclude": ["src/app/**/*", "src/main.tsx", "src/assets/**/*", "node_modules", "dist"]
}